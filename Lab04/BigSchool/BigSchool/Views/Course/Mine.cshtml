@model IEnumerable<BigSchool.Models.Cours>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.Name
                    </span>
                    <span class="category">
                        @course.Categoryy.Name
                    </span>
                    <div class="action">
                        <a href="@Url.Action("Edit","Course",new { id=course.Id })">Edit</a>
                        <a href="@Url.Action("Delete","Course",new { id=course.Id })">Delete</a>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
